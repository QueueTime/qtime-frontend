{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ES6",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@api/*": ["src/api/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@navigators/*": ["src/navigators/*"],
      "@screens/*": ["src/screens/*"],
      "@utils/*": ["src/utils/*"],
      "@atoms/*": ["src/recoil/atoms/*"]
    }
  },
  "exclude": ["node_modules"],
  "typeRoots": ["src/types"]
}
